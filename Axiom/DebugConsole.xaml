<Window x:Class="Axiom.DebugConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        xmlns:Themes1="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
        mc:Ignorable="d"
        Title="Debug Console"
        Height="500"
        Width="400"
        Icon="Resources/Images/Icons/DebugConsole.ico"
        Style="{DynamicResource WindowDebugConsole}">
    <Grid>

        <!-- Debug View -->
        <RichTextBox Name="rtbDebug"
                     Margin="0"
                     Background="{x:Null}"
                     Foreground="White"
                     VerticalScrollBarVisibility="Visible"
                     RenderOptions.ClearTypeHint="Enabled"
                     FontFamily="Consolas"
                     Padding="10"
                     IsReadOnly="True"
                     IsUndoEnabled="False">
            <!--<FlowDocument>
                <Paragraph>
                    <Run Text="{Binding Debug_Text, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                </Paragraph>
            </FlowDocument>-->
        </RichTextBox>

        <!-- Methods Button -->
        <Button x:Name="btnDebugMethods"
                Margin="0,10,173,0"
                BorderBrush="#7FFFFFFF"
                Background="{x:Null}"
                Foreground="White"
                Cursor="Hand"
                HorizontalAlignment="Right"
                Width="55"
                Height="20"
                VerticalAlignment="Top"
                Click="btnDebugMethods_Click">
            <TextBlock Text="Methods"
                       Margin="0,-2,0,0"
                       Foreground="#99FFFFFF" />
        </Button>

        <!-- Random Button -->
        <Button x:Name="btnDebugRandom"
                Margin="0,10,113,0"
                BorderBrush="#7FFFFFFF"
                Background="{x:Null}"
                Foreground="White"
                Cursor="Hand"
                HorizontalAlignment="Right"
                Width="55"
                Height="20"
                VerticalAlignment="Top"
                Click="btnDebugRandom_Click">
            <TextBlock Text="Random"
                       Margin="0,-2,0,0"
                       Foreground="#99FFFFFF" />
        </Button>

        <!-- Test Button -->
        <Button x:Name="btnDebugTest"
                Margin="0,10,53,0"
                BorderBrush="#7FFFFFFF"
                Background="{x:Null}"
                Foreground="White"
                Cursor="Hand"
                HorizontalAlignment="Right"
                Width="55"
                Height="20"
                VerticalAlignment="Top"
                Click="btnDebugTest_Click">
            <TextBlock Text="Test"
                       Margin="0,-2,0,0"
                       Foreground="#99FFFFFF" />
        </Button>

        <!-- Expand Buutton -->
        <Button x:Name="btnExpand"
                Margin="0,10,28,0"
                BorderBrush="#7FFFFFFF"
                Background="{x:Null}"
                Foreground="White"
                Cursor="Hand"
                Click="btnExpand_Click"
                HorizontalAlignment="Right"
                Width="20"
                ToolTip="Expand Window"
                Height="20"
                VerticalAlignment="Top">
            <TextBlock x:Name="textBlockExpand"
                       Text="+"
                       Margin="0,-2,0,0"
                       Foreground="#99FFFFFF" />
        </Button>

    </Grid>
</Window>